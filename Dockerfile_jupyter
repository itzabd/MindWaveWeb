# Use minimal base image
FROM python:3.11-slim

# System setup (keep minimal)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Configure pip cache
ENV PIP_CACHE_DIR=/tmp/pip_cache
RUN mkdir -p ${PIP_CACHE_DIR}

# Install CPU-only PyTorch first (smaller/faster)
RUN pip install --no-cache-dir -U \
    torch==2.2.2+cpu \
    --index-url https://download.pytorch.org/whl/cpu

# Install other requirements with compiled wheels
COPY train_requirements.txt .
RUN pip install --no-cache-dir \
    --prefer-binary \
    --only-binary=:all: \
    -r train_requirements.txt

# Jupyter setup (lightweight)
RUN pip install --no-cache-dir \
    jupyterlab==4.2.0 \
    ipywidgets==8.1.3

# Application setup
WORKDIR /app
COPY . .

# Cleanup
RUN rm -rf ${PIP_CACHE_DIR}

EXPOSE 8888
CMD ["jupyter", "lab", "--ip=0.0.0.0", "--no-browser"]